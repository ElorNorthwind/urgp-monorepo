  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to nest",
      "port": 9229,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "restart": true,
      "sourceMaps": true,
      "trace": true,
      "cwd": "${workspaceFolder}/apps/server"
    },
    {
      "name": "Launch Nest Server",
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["nx", "serve", "server"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/apps/server"
    }
  ]
}
