{
  "extends": "./tsconfig.json",
  "composite": true,
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "declaration": true,
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts"
    ]
  },
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "../widgets/src/OkrugTotalsChart/ui/OkrugTotalsChart.tsx",
    "../widgets/src/DoneTimelineChart/ui/DoneTimelineChart.tsx",
    "../widgets/src/OldBuildingCard/ui/OldBuildingCard.tsx",
    "../features/src/MapCurve/ui/AddCurve.tsx",
    "src/cases/ui/CaseFormElements",
    "src/equityObjects/ui/equityObjectsTable/cells/EquityObjectStatusCelltsx"
  ],
  "exclude": [
    "vite.config.ts",
    "vitest.config.ts",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.jsx",
    "src/**/*.test.jsx"
  ]
}
